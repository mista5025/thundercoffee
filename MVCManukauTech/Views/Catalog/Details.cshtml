@model MVCManukauTech.ViewModels.CatalogViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Capsule Name
        </dt>
        <dd>
            @Model.Name
        </dd>
        <dt>
        </dt>
        <dd>
            <img src="~/images/products/@Model.ImageFileName" />
        </dd>
        <dt>
            Unit Cost
        </dt>
        <dd>
            $@Model.UnitCost/ea
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Model.Description
        </dd>
        <dt>
            Category
        </dt>
        <dd>
            @Model.CategoryName
        </dd>
    </dl>
</div>
<div>
    <a href="~/Catalog/Index" button="button" class="btn btn-success">Back to List</a>
</div>

